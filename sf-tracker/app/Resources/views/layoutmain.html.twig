            });

        });
        function numberNotifications(){
            var URL = '{{ path('_numberNotifications') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                dataType : "html",
                success : function(data){
                    jQuery('.numberTop').html(data);
                }
            });
        }
         function LoadNotifications(){
             var URL = '{{ path('_Notifications') }}';
             jQuery.ajax({
                 type: "post",
                 url : URL,
                 dataType : "html",
                 success : function(data){
                     jQuery('#notifications_content').html(data);
                 }
             });
         }

    </script>

