{% extends '::layoutmain.html.twig' %}

{% block title %}Edit Projects{% endblock %}

{% block Breadcrumb %}
    <h5>Add Projects</h5>
{% endblock %}
 {% block stylesheets %}
     <link href="{{ asset('assets/css/bootstrap-fileupload.css') }}" rel="stylesheet" type="text/css" />
 {% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/bootstrap-fileupload.min.js') }}"></script>
{% endblock %}
{% block body %}



    <div class="wrapper">
    {{ form_errors(form)  }}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="nNote nSuccess hideit">
            <p><strong>SUCCESS: </strong>{{ flashMessage }}</p>
        </div>
    {% endfor %}
    {% for i in err %}
        <div class="nNote nFailure hideit">
            <p><strong>SUCCESS: </strong>{{ i }}</p>
        </div>
    {% endfor %}

        <form action="" method="post" enctype="multipart/form-data" >
            <input type="hidden" name="old_image" value="{{ image_old }}"/>
        <div class="form">
            <fieldset>
                <div class="widget">
                    <div class="title"><img src="{{ asset('assets/images/icons/dark/pencil.png') }}" alt="" class="titleIcon" /><h6>Update project</h6></div>
                    <div class="formRow">
                        <label>{{ form_label(form.name) }}</label>
                        <div class="formRight">{{ form_widget(form.name) }}</div>
                        {{ form_errors(form.name) }}
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label>Image:</label>
                        <div class="formRight">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                    {% if image_old != '' %}
                                        <img src="http://{{ app.request.getHost() }}/upload/{{ image_old }}" style="max-height: 150px" alt="" />
                                    {% else %}
                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                    {% endif %}
                                </div>

                                <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                               <span class="btn btn-default btn-file"><span class="fileupload-new">Select image</span>
                                               <span class="fileupload-exists">Change</span>
                                               <input type="file" class="file-input" name="image"/>
                                               </span>
                                    <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label>{{ form_label(form.status) }}</label>
                        <div class="formRight"><div class="selector" >{{ form_widget(form.status) }}</div></div>
                        {{ form_errors(form.status) }}
                        <div class="clear"></div>
                    </div>

                    <a href="{{ path('_listProjects') }}" title="" class="wButton greenwB ml15 m10"><span>List project</span></a>

                    <div class="formSubmit"><input type="submit" value="submit" class="redB"></div>
                    <div class="clear"></div>
                </div>
            </fieldset>
        </div>
     </form>

    </div>
{% endblock %}