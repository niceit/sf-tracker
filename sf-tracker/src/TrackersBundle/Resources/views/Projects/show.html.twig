{% extends '::layoutmain.html.twig' %}

{% block title %}Issuse{% endblock %}

{% block Breadcrumb %}
    <h5>Projects manager</h5>
    <span>Do your layouts deserve better than Lorem Ipsum.</span>
{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="invButtons">

            <a style="margin: 0" href="{{ path('_addIssues' , { 'id': id }) }}" title="" class="sButton sBlue"><img src="{{ asset('assets/images/icons/sPlus.png') }}" alt=""><span>Add new issues</span></a>
             <div class="clear"></div>
        </div>
        <br>
    </div>
    <div class="line"></div>
    <div class="wrapper">
        <div class="widget">
            <ul class="tabs">
                <li class="activeTab"><a href="#tab1">Activity</a></li>
                <li class=""><a href="#tab2">2 Open Issues</a></li>
                <li class=""><a href="#tab3">2 Closed Issues</a></li>
                <li class=""><a href="#tab4">2 Issues Assigned To You</a></li>
            </ul>

            <div class="tab_container">
                <div id="tab1" class="tab_content" style="display: block;">
                    <div class="widget">
                        <table cellpadding="0" cellspacing="0" width="100%" class="sTable">
                            <tbody class="content_activity">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="tab2" class="tab_content" style="display: none;">
                    <div class="widget">
                        <table cellpadding="0" cellspacing="0" width="100%" class="sTable withCheck" id="checkAll">
                            <thead>
                            <tr>
                                <td><img src="{{ asset('assets/images/icons/tableArrows.png') }}" alt=""></td>
                                <td width="30">ID</td>
                                <td>Tile</td>
                            </tr>
                            </thead>
                            <tbody class="content_open">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="tab3" class="tab_content" style="display: none;">
                    <div class="widget">
                        <table cellpadding="0" cellspacing="0" width="100%" class="sTable withCheck" id="checkAll">
                            <thead>
                            <tr>
                                <td>ID</td>
                                <td>Tile</td>
                            </tr>
                            </thead>
                            <tbody class="content_close">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="tab4" class="tab_content" style="display: none;">
                    <div class="widget">
                        <table cellpadding="0" cellspacing="0" width="100%" class="sTable withCheck" id="checkAll">
                            <thead>
                            <tr>
                                <td>ID</td>
                                <td>Tile</td>
                            </tr>
                            </thead>
                            <tbody class="content_assigned">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <script type="text/javascript" >
        var project_id = {{ id }};
        $(function(){
            //load_activity(0);
            load_open(0);
            load_close(0);
            load_assigned(0);
        });
        function load_activity(page){
            var URL = '{{ path('_ajaxlistProjects') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page},
                dataType : "html",
                success : function(data){
                    jQuery('.content_activity').html(data);
                }
            });
        }
        function load_open(page){
            var URL = '{{ path('_ajaxListOpenIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_open').html(data);
                }
            });
        }
        function load_close(page){
            var URL = '{{ path('_ajaxListCloseIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_close').html(data);
                }
            });
        }
        function load_assigned(page){
            var URL = '{{ path('_ajaxListAssignedIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_assigned').html(data);
                }
            });
        }
    </script>

{% endblock %}