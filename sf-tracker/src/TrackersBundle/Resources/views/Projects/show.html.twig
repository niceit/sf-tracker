{% extends '::layoutmain.html.twig' %}

{% block title %}Issuse{% endblock %}

{% block Breadcrumb %}
    <h5>Projects manager</h5>
    <span>Do your layouts deserve better than Lorem Ipsum.</span>
{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="invButtons">

            <a style="margin: 0" href="{{ path('_addIssues' , { 'id': id }) }}" title="" class="sButton sBlue"><img src="{{ asset('assets/images/icons/sPlus.png') }}" alt=""><span>Add new issues</span></a>
             <div class="clear"></div>
        </div>
        <br>
    </div>
    <div class="line"></div>






    <div class="wrapper">
        <div class="widget">
            <ul class="tabs">
                <li class="activeTab"><a href="#tab1">{{ number_activity }} Activity</a></li>
                <li class=""><a href="#tab2">{{ number_open }} Open Issues</a></li>
                <li class=""><a href="#tab3">{{ number_close }} Closed Issues</a></li>
                <li class=""><a href="#tab4">{{ number_assigned }} Issues Assigned To You</a></li>
            </ul>

            <div class="tab_container">
                <div id="tab1" class="tab_content" style="display: block;">
                    <div class="widget content_activity" >
                    </div>
                </div>
                <div id="tab2" class="tab_content" style="display: none;">
                    <div class="widget content_open">

                    </div>
                </div>
                <div id="tab3" class="tab_content" style="display: none;">
                    <div class="widget content_close">

                    </div>
                </div>
                <div id="tab4" class="tab_content" style="display: none;">
                    <div class="widget content_assigned">

                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>



        <div class="clear"></div>

        <div class="widget">
            <div class="title"><img src="{{ asset('assets/images/icons/dark/transfer.png') }}" alt="" class="titleIcon"><h6>Assigned user</h6>
                <div class="div_assigned" >
                    <input type="text" value="" onchange="changeuser(this.value)" class="assigned_user" >
                    <div id="content_assigned_user">
                    </div>
                </div>
            </div>
            <div id="load_user_assigned" class="scroll">

            </div>
        </div>



    </div>

    <script type="text/javascript" >
        var project_id = {{ id }};
        $(function(){
            load_activity(0);
            load_open(0);
            load_close(0);
            load_assigned(0);
            load_user_assigned();
        });
        function remove_user_project(id){

            var confirmBox = confirm('Are you sure you want to remove this user from the project?');
            if (!confirmBox) return false;

            $('.loading').show();
            var URL = '{{ path('_removeUerProject') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'id' : id },
                dataType : "html",
                success : function(data){
                    if( data != 1 ){
                        $('.row_user_'+data).hide();
                        $('.loading').hide();
                    }
                }
            });
        }
        function fcadd_user(user_id){
            $('.loading').show();
            var URL = '{{ path('_addUerProject') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'user_id' : user_id, 'project_id' : {{ id }} },
                dataType : "html",
                success : function(data){
                    load_user_assigned();
                    $('.row-'+data).hide();
                    $('.loading').hide();
                }
            });
        }
        function changeuser(user_name){
            var URL = '{{ path('_ajaxSearch_user') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'user_name':user_name, 'project_id' : {{ id }} },
                dataType : "html",
                success : function(data){
                    $('#content_assigned_user').html(data);

                }
            });

        }
        function load_user_assigned(){
            var URL = '{{ path('_Add_UserProjects') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'project_id' : {{ id }} },
                dataType : "html",
                success : function(data){
                    $('#load_user_assigned').html(data);
                }
            });
        }

        function load_activity(page){
            $('.loading').show();
            var URL = '{{ path('_ajaxListActivityIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id': {{ id }} },
                dataType : "html",
                success : function(data){
                    jQuery('.content_activity').html(data);
                    $('.loading').hide();
                }
            });
        }
        function load_open(page){
            var URL = '{{ path('_ajaxListOpenIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_open').html(data);
                }
            });
        }
        function load_close(page){
            var URL = '{{ path('_ajaxListCloseIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_close').html(data);
                }
            });
        }
        function load_assigned(page){
            var URL = '{{ path('_ajaxListAssignedIssues') }}';
            jQuery.ajax({
                type: "post",
                url : URL,
                data:{'page':page, 'project_id':project_id},
                dataType : "html",
                success : function(data){
                    jQuery('.content_assigned').html(data);
                }
            });
        }
    </script>

{% endblock %}