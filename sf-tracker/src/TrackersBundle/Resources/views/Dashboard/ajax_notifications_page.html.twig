{% if notifications %}
    <ul class="nmessages">
        {% for notification in notifications %}
            <li {% if notification.getIsRead()==1  %} class="taskProgress" {% else %} class="taskDone" {% endif %} ><a class="ajax-request-btn" href="{{ path('_project_issues', { 'id': notification.getIssueId() , 'project_id': notification.getProjectId() }) }}">{{ notification.getText() }}</a></li>
        {% endfor %}
    </ul>

    <div class="pagination">
        <ul class="pages">
           {{ paginations| raw }}
        </ul>
    </div>
{% endif %}
