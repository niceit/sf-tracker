<div class="left-assigned">
    <h4>Assigned Users</h4>
    <p>Users assigned to this project</p>
    <div class="content-left-assigned">
    </div>
     <input type="text" value="" onchange="change_user(this.value)" class="assigned_user_left" >
    <div class="content_assigned_user left-assigned-ul">
    </div>
</div>
<script type="text/javascript">
    $(function(){
        var URL = '{{ path('_list_assigned') }}';
        jQuery.ajax({
            type: "post",
            url : URL,
            data:{'project_id' : {{ project_id }} },
            dataType : "html",
            success : function(data){
             $('.content-left-assigned').html(data);
            }
        });
    });

    function remove_user_assigned(id){

        var confirmBox = confirm('Are you sure you want to remove this user from the project?');
        if (!confirmBox) return false;

        $('.loading').show();
        var URL = '{{ path('_removeUerProject') }}';
        jQuery.ajax({
            type: "post",
            url : URL,
            data:{'id' : id },
            dataType : "html",
            success : function(data){
                if( data != 1 ){
                    $('.row_user_'+data).hide();
                    $('.loading').hide();
                }
            }
        });
    }
    function change_user(user_name){
        var URL = '{{ path('_ajaxSearch_user') }}';
        jQuery.ajax({
            type: "post",
            url : URL,
            data:{'user_name':user_name, 'project_id' : {{ project_id }} },
             dataType : "html",
            success : function(data){
              //  alert(data);
             $('.content_assigned_user').html(data);

            }
    });

    }

    function fcadd_user(user_id, full_name){

        var URL = '{{ path('_addUerProject') }}';
        jQuery.ajax({
            type: "post",
            url : URL,
            data:{'user_id' : user_id, 'project_id' : {{ project_id }}, 'full_name' : full_name },
            dataType : "json",
            success : function(data){
                $('.row-'+data['user_id']).hide();
                $('.content-left-assigned ul').append('<li class="row_user_'+data['user_id']+'"> <a href="#" title="">'+data['full_name']+'</a> <a class="remove-assigned" href="javascipt:void(0);" onclick="remove_user_assigned('+data['user_id']+')" original-title="Remove"><img src="/assets/images/icons/remove.png" alt=""></a> <div class="clear"></div> </li>');
            }
        });
    }
</script>